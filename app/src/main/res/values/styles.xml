<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 탭레이아웃 TagTheme -->
    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#FFFFFF</item>                                <!-- 배경 -->

        <item name="android:textColorPrimary">@android:color/black</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/black</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">@color/mainColor</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <!-- 탭 레이아웃 text size -->
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 레이팅바 금색으로 채우기-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#D7D1D1</item>
        <item name="colorControlActivated">@color/pickupDone</item>
    </style>

    <!-- 레이팅바 금색으로 채우기 / 작은 레이팅바-->
    <style name="SmallRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#D7D1D1</item>
        <item name="colorControlActivated">@color/pickupDone</item>
        <item name="ratingBarStyle">@style/Widget.AppCompat.RatingBar.Small</item>
    </style>

    <!-- 레이팅바 금색으로 채우기 / 미듐 레이팅바 안댐안댐-->
    <style name="MediumRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#D7D1D1</item>
        <item name="colorControlActivated">@color/pickupDone</item>
        <item name="ratingBarStyle">@style/Widget.AppCompat.RatingBar.Indicator</item>
    </style>

</resources>
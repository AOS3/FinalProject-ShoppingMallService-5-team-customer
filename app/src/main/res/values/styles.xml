<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 탭레이아웃 TagTheme -->
    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#FFFFFF</item>                                <!-- 배경 -->

        <item name="android:textColorPrimary">@android:color/black</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/black</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">@android:color/white</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <!-- 탭레이아웃 text size -->
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomMaterialSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <!-- BottomNavigationView 아이콘 색상 -->

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- 텍스트 색상 상태별로 지정 -->
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <!-- 아이콘 색상 상태별로 지정 -->
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>

    <!-- 레이팅바 금색으로 채우기-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/pickupDone</item>
    </style>

    <style name="ImageRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_judamie_ratingbar</item>
    </style>

    <style name="SmallRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_judamie_ratingbar</item>
    </style>

    <style name="SmallRatingBar_shimmer" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_judamie_ratingbar</item>
    </style>




</resources>